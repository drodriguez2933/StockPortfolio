<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:fillViewport="false"
            android:background="@color/light_gray"
            android:id="@+id/scrollView"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/top_relative_layout"
            android:background="@android:color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stock_ticker_symbol"
                android:layout_marginTop="10dp"
                android:text="MSFT"
                android:textSize="30dp"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stock_name"
                android:layout_below="@id/stock_ticker_symbol"
                android:text="Microsoft"
                android:textSize="14dp"
                android:layout_marginLeft="5dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                android:layout_below="@id/stock_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stock_price"
                android:layout_below="@id/stock_name"
                android:text="65.35"
                android:textSize="50dp"
                android:paddingTop="15dp"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/current_price_text"
                android:text="Current Price"
                android:textSize="15dp"
                android:layout_below="@id/stock_price"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stock_percentage"
                android:text="-0.15(-0.23%)"
                android:textSize="15dp"
                android:layout_below="@id/current_price_text"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/chart_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/stock"
                android:layout_below="@id/stock_percentage"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/stock_informaiton_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/top_relative_layout"
            android:background="@color/white"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/key_statistics_text_view"
                android:text="Key Statistics"
                android:textSize="15dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/key_statistics_text_view"
                android:layout_marginLeft="5dp">

                <RelativeLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_margin="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prev Close"
                        android:id="@+id/prev_close_text_view"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="65.48"
                        android:layout_alignParentRight="true"
                        android:textStyle="bold"
                        android:id="@+id/stock_prev_close"
                        android:padding="5dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray"
                        android:layout_below="@id/prev_close_text_view"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Low"
                        android:id="@+id/low_text_view"
                        android:layout_below="@id/prev_close_text_view"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="65.16"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/stock_prev_close"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:id="@+id/stock_low"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray"
                        android:layout_below="@id/low_text_view"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="52wk Low"
                        android:id="@+id/fifty_two_week_low_text_view"
                        android:layout_below="@id/low_text_view"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45.04"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/stock_low"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:id="@+id/stock_fifty_two_week_low"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray"
                        android:layout_below="@id/fifty_two_week_low_text_view"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mkt Cap"
                        android:id="@+id/mkt_cap_text_view"
                        android:layout_below="@id/fifty_two_week_low_text_view"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45.04"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/stock_fifty_two_week_low"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:id="@+id/stock_mkt_cap"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray"
                        android:layout_below="@id/stock_mkt_cap"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1Y Target"
                        android:id="@+id/one_year_target_text_view"
                        android:layout_below="@id/mkt_cap_text_view"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45.04"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/stock_mkt_cap"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:id="@+id/stock_one_year_target"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray"
                        android:layout_below="@id/one_year_target_text_view"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Earnings per share"
                        android:id="@+id/earnings_per_share_text_view"
                        android:layout_below="@id/one_year_target_text_view"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45.04"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/stock_one_year_target"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:id="@+id/stock_earnings_per_share"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray"
                        android:layout_below="@id/earnings_per_share_text_view"/>

                </RelativeLayout>




                <RelativeLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open"
                        android:id="@+id/open_text_view"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="65.33"
                        android:layout_alignParentRight="true"
                        android:id="@+id/stock_open"
                        android:textStyle="bold"
                        android:padding="5dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray"
                        android:layout_below="@id/open_text_view"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="High"
                        android:id="@+id/high_text_view"
                        android:layout_below="@id/open_text_view"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="65.71"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/stock_open"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:id="@+id/stock_high"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray"
                        android:layout_below="@id/high_text_view"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="52wk High"
                        android:id="@+id/fifty_two_week_high_text_view"
                        android:layout_below="@id/high_text_view"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="66.35"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/stock_high"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:id="@+id/stock_fifty_two_week_high"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray"
                        android:layout_below="@id/fifty_two_week_high_text_view"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Volume"
                        android:id="@+id/volumne_text_view"
                        android:layout_below="@id/fifty_two_week_high_text_view"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45.04"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/stock_fifty_two_week_high"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:id="@+id/stock_volume"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray"
                        android:layout_below="@id/volumne_text_view"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avg Vol"
                        android:id="@+id/avg_volume_text_view"
                        android:layout_below="@id/volumne_text_view"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45.04"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/stock_volume"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:id="@+id/stock_avg_volue"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray"
                        android:layout_below="@id/avg_volume_text_view"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price-Earnings"
                        android:id="@+id/price_earnings_text_view"
                        android:layout_below="@id/avg_volume_text_view"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45.04"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/stock_avg_volue"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:id="@+id/stock_price_earnings"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray"
                        android:layout_below="@id/price_earnings_text_view"/>


                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</ScrollView>